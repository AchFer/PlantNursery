{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commentaire</h1>

    <table>
        <tbody>
            <tr>
                <th>Idcommentaire</th>
                <td>{{ commentaire.idCommentaire }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ commentaire.content }}</td>
            </tr>
            <tr>
                <th>Flag</th>
                <td>{{ commentaire.flag }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if commentaire.date %}{{ commentaire.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commentaire_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('commentaire_edit', { 'idCommentaire': commentaire.idCommentaire }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
